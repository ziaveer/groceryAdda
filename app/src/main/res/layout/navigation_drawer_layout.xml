<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="90dp"
        android:layout_marginTop="30dp"
        android:orientation="horizontal">

        <de.hdodenhof.circleimageview.CircleImageView
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_marginStart="25dp"
            android:src="@drawable/mylogo"
            app:civ_border_width="4dp"
            app:civ_border_color="@color/white"
            android:layout_gravity="center"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:text="GrocerryAdda"
            android:textColor="#388E3C"
            android:textSize="25dp"
            android:layout_gravity="center"/>
    </LinearLayout>


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:orientation="vertical"
            android:layout_marginTop="20dp"
            >
            <TextView
                android:layout_width="match_parent"
                android:layout_height="56dp"
                android:gravity="center_vertical"
                android:textSize="16sp"
                android:text="Home"
                android:textColor="#388E3C"
                android:padding="10dp"
                android:layout_marginEnd="5dp"
                android:layout_marginBottom="10dp"
                android:drawableLeft="@drawable/ic_home_black_24dp"
                android:drawablePadding="10dp"
                />

            <TextView
                android:id="@+id/tv_nav_profile"
                android:layout_width="match_parent"
                android:layout_height="56dp"
                android:layout_marginEnd="5dp"
                android:layout_marginBottom="10dp"
                android:gravity="center_vertical"
                android:padding="10dp"
                android:text="Profile"
                android:textColor="#388E3C"
                android:textSize="16sp"
                android:drawableLeft="@drawable/ic_person_outline_black_24dp"
                android:drawablePadding="10dp"
                />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="56dp"
                android:gravity="center_vertical"
                android:text="Your Orders"
                android:textColor="#388E3C"
                android:padding="10dp"
                android:layout_marginEnd="5dp"
                android:textSize="16sp"
                android:layout_marginBottom="10dp"
                android:drawableLeft="@drawable/ic_ecommerce"
                android:drawablePadding="10dp"
                />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="56dp"
                android:gravity="center_vertical"
                android:textSize="16sp"
                android:text="Favourite Orders"
                android:textColor="#388E3C"
                android:padding="10dp"
                android:layout_marginEnd="5dp"
                android:layout_marginBottom="10dp"
                android:drawableLeft="@drawable/ic_favorite_black_24dp"
                android:drawablePadding="10dp"
                />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="56dp"
                android:gravity="center_vertical"
                android:textSize="16sp"
                android:text="My Cart"
                android:textColor="#388E3C"
                android:padding="10dp"
                android:layout_marginEnd="5dp"
                android:layout_marginBottom="10dp"
                android:drawablePadding="10dp"
                android:drawableLeft="@drawable/ic_add_shopping_cart_black_24dp"
                />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="56dp"
                android:gravity="center_vertical"
                android:layout_marginEnd="5dp"
                android:drawableLeft="@drawable/ic_local_offer_black_24dp"
                android:padding="10dp"
                android:text="Offers"
                android:textColor="#388E3C"
                android:layout_marginBottom="10dp"
                android:drawablePadding="10dp"
                android:textSize="16sp"
                />
            <TextView
                android:id="@+id/payment"
                android:layout_width="match_parent"
                android:layout_height="56dp"
                android:gravity="center_vertical"
                android:textSize="16sp"
                android:text="Payments"
                android:textColor="#388E3C"
                android:padding="10dp"
                android:layout_marginEnd="5dp"
                android:layout_marginBottom="10dp"
                android:drawablePadding="10dp"
                android:drawableLeft="@drawable/ic_payment_black_24dp"
                />

            <TextView
                android:id="@+id/tv_nav_moreSetting"
                android:layout_width="match_parent"
                android:layout_height="56dp"
                android:gravity="center_vertical"
                android:textSize="16sp"
                android:text="More Settings"
                android:textColor="#388E3C"
                android:padding="10dp"
                android:layout_marginEnd="5dp"
                android:layout_marginBottom="10dp"
                android:drawablePadding="10dp"
                android:drawableLeft="@drawable/ic_settings_black_24dp"
                />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="56dp"
                android:gravity="center_vertical"
                android:textSize="16sp"
                android:text="Sign Out"
                android:textColor="#388E3C"
                android:padding="10dp"
                android:layout_marginEnd="5dp"
                android:layout_marginBottom="10dp"
                android:drawablePadding="10dp"
                android:drawableLeft="@drawable/ic_power_settings_new_black_24dp"
                />
        </LinearLayout>
    </ScrollView>
</LinearLayout>